#address
  #address1
    .street
      = f.label :street1, 'Rue'
      %br
      = f.text_field :street1
    .number
      = f.label :number, 'Numero'
      %br
      = f.text_field :number
    .box
      = f.label :box, 'Boite'
      %br
      = f.text_field :box
  #address2
